.like-avatars {
  display: inline-flex;
  align-items: center;
}

.like-avatar {
  width: 40rpx;
  height: 40rpx;
  border-style: solid;
  border-width: 4rpx;
  border-color: white;
  border-radius: 50%;
  position: relative;
  z-index: 1;
}

.travel-likes {
  background: #f2f2f2;
  width: fit-content;
  border-radius: 40rpx;
  font-size: 25rpx;
  color: grey;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx 20rpx 5rpx 20rpx;
  margin: 10rpx 0rpx;
  position: relative;
  bottom: 4rpx;
  z-index: 0;
}